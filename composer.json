{
    "name": "k-link/k-registry",
    "description": "The Registrant API",
    "license": "AGPL-3.0-only",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1",
        "components/jquery": "^3",
        "doctrine/doctrine-bundle": "^1.7",
        "doctrine/orm": "^2.5",
        "jms/serializer-bundle": "^2.0",
        "monolog/monolog": "^1.23",
        "ramsey/uuid": "^3.6",
        "sensio/distribution-bundle": "^5.0.19",
        "sensio/framework-extra-bundle": "^3.0.2",
        "swagger-api/swagger-ui": "^3.0",
        "symfony/annotations-pack": "^1.0",
        "symfony/asset": "^3.3",
        "symfony/console": "^3.3",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^3.3",
        "symfony/monolog-bundle": "^3.1.0",
        "symfony/polyfill-apcu": "^1.0",
        "symfony/process": "^3.3",
        "symfony/swiftmailer-bundle": "^2.3.10",
        "symfony/symfony": "3.3.*",
        "symfony/twig-bundle": "^3.3",
        "symfony/validator": "^3.3",
        "symfony/web-profiler-bundle": "^3.3",
        "symfony/web-server-bundle": "^3.3",
        "symfony/yaml": "^3.3",
        "twbs/bootstrap": "4.0.0-alpha.6",
        "twig/twig": "^1.0||^2.0",
        "zircote/swagger-php": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "sensio/generator-bundle": "^3.0",
        "symfony/phpunit-bridge": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.3",
        "symfony/dotenv": "^3.3"
    },
    "scripts": {
        "auto-scripts": {
            "make cache-warmup": "script",
            "bin/console assets:install --symlink --relative": "script",
            "php -r \"if (!file_exists('web/bundles/bootstrap/')){  symlink(__DIR__.'/vendor/twbs/bootstrap/dist', 'web/bundles/bootstrap');}\"": "script",
            "php -r \"if (!file_exists('web/bundles/jquery/')){  symlink(__DIR__.'/vendor/components/jquery', 'web/bundles/jquery');}\"": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": false
        }
    }
}
